{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Diretório de saída para os arquivos .js
    "rootDir": "./src",  // Diretório raiz dos arquivos .ts
    "types": ["jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "dist/dtos/sign-in.dto.js"],
  "exclude": ["node_modules", "dist"]
}